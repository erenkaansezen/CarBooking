@model List<Web.Dto.CarPricingDtos.ResultCarPricingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
@await Component.InvokeAsync("_HeadUILayoutComponentPartial")

@await Component.InvokeAsync("_CarCoverComponentPartial")

<section class="ftco-section bg-gradient">
    <div class="container">
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-4" >
                    <div class="car-wrap rounded ftco-animate" style="background-color:#343a40">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">

                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="car-single.html" style="color:white">@item.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat" style="color:white">@item.Brand</span>
                                <p class="price ml-auto" style="color:white">@item.Amount <span style ="color:white">/Günlük</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block">
                                <a href="/Reservation/Index/@item.CarId" class="btn btn-dark py-2 mr-1">Kirala</a>
                                <a href="/Car/CarDetail/@item.CarId" class="btn btn-dark py-2 ml-1">Detaylar</a>
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

