@model Web.Dto.LocationDtos.ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadUILayoutComponentPartial")
<body>
    @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")
    @await Component.InvokeAsync("_DefaultBannerComponentPartial")
    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12 featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post"  class="request-form ftco-animate bg-dark">
                                <h2>Seyahatinizi Planlayın</h2>
                                <div class="form-group">
                                    <label for="" class="label">Alış Noktası</label>
                                    @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.v, new
                                        {
                                            @class = "form-control;",
                                            style = "background-color:#2b2f33; color:#f8f9fa; border:1px solid #495057; opacity:1; width: 280px; height: 36px; border-radius:0.35rem; padding:0.25rem 0.75rem;",
                                            name="locationID"
                                        })
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alış Tarihi</label>
                                        <input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Tarih">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">Teslim Tarihi</label>
                                        <input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Tarih">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Alış Saati</label>
                                    <input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Saat">
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Teslim Saati</label>
                                    <input type="text" name="p" class="form-control" name="time_off" id="time_dropoff" placeholder="Saat">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-dark py-3 px-4">Hızlıca Aracınızı Kiralayın</button>
                                </div>
                            </form>

                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <br />
                                <br />
                                <br />
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span style="color:#212529">⚲</span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span style="color:#212529" class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Araçları Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span style="color:#212529" class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı Tamamla, Hepsi Bu!</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </section>
    @await Component.InvokeAsync("_DefaultLastFiveCarsWithBrandsComponentPartial")
    @await Component.InvokeAsync("_AboutUsComponentPartial")
	@await Component.InvokeAsync("_DefaultOurServiceComponentPartial")
    @await Component.InvokeAsync("_BecomeADriverComponentPartial")
    @await Component.InvokeAsync("_TestimonialComponentPartial")
    @await Component.InvokeAsync("_FooterUILayoutComponentPartial")
    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")
</body>
</html>

