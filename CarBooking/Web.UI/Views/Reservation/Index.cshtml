@model Web.Dto.ReservationDtos.CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
     @await Component.InvokeAsync("_ReservationBannerComponentPartial")
     <div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="aler alert-dark">Araç Rezervasyon Formu</h3>
        <br />
        <div class="form-group">
            <input type="hidden" class="form-control" value="@ViewBag.carid" asp-for="CarID" placeholder="Almak İstediğiniz araba">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Name" placeholder="Adınız" >
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Email" placeholder="Mail Adresiniz">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız">
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.v, "Alış Lokasyon seçiniz", new
                {
                    @class = "form-control",
                })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.v, "Teslim Lokasyon seçiniz", new
                {
                    @class = "form-control",
                })
        </div>
        <div class="form-group">
            <input type="text" asp-for="Age" class="form-control" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <input type="text" asp-for="DriverLicenseYear" class="form-control" placeholder="Ehliyet yılınız">
        </div>

        <div class="form-group">
            <textarea asp-for="Description" id="" cols="30" rows="7" class="form-control" placeholder="İletmek istediğiniz mesaj"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-dark py-3 px-5">
        </div>
    </form>

</div>

