@model List<Web.Dto.CarPricingDtos.ResultCarPricingListDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Index.cshtml";
}

@await Component.InvokeAsync("_CarPricingBannerViewComponentPartial")

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-dark heading">Günlük Kiralama</th>
								<th class="bg-dark heading">Haftalık Kiralama</th>
								<th class="bg-dark heading">Aylık Kiralama</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
									<td class="product-name">
										<h3>@item.Model</h3>
									</td>

									<td class="price">
										<p class="btn-custom"><a style="background-color:black;color:white" href="#">Kiralama İşlemi</a></p>
										<div class="price-rate">
											<h3>
												<span style="color:black" class="num">@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:N0}", item.DailyAmount) ₺</span>
												<span class="per">/Günlük</span>
											</h3>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a style="background-color:black;color:white" href="#">Kiralama İşlemi</a></p>
										<div class="price-rate">
											<h3>
												<span style="color:black" class="num">@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:N0}", item.WekklyAmount) ₺</span>
												<span class="per">/Haftalık</span>
											</h3>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a style="background-color:black;color:white" href="#">Kiralama İşlemi</a></p>
										<div class="price-rate">
											<h3>
												<span style="color:black" class="num">@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:N0}", item.MonthlyAmount) ₺</span>
												<span class="per">/Aylık </span>
											</h3>
										</div>
									</td>
								</tr><!-- END TR-->
							</tbody>
						}

					</table>
				</div>
			</div>
		</div>
	</div>
</section>