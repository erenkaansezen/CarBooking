@model List<Web.Dto.CarFeatureDtos.ResultCarFeatureByCarIdDto>

<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @{
            const int chunkSize = 3;
            var chunks = Model
            .Select((x, i) => new { x, i })
            .GroupBy(t => t.i / chunkSize) 
            .ToList();
        }

        @foreach (var group in chunks)
        {
            <div class="col-12 col-md-4">
                <ul class="features list-unstyled mb-3">
                    @foreach (var t in group)
                    {
                        var item = t.x;
                        <li class="@(item.Available ? "check" : "remove")">
                            <span class="@(item.Available ? "ion-ios-checkmark" : "ion-ios-close")"></span>
                            @item.FeatureName
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
