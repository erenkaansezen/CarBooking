@model List<Web.Dto.CarDtos.ResultCarWithBrandsDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}
<br />
<br />
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araç Tablosu</h4>
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Vites Türü</th>
                                <th>Km</th>
                                <th>Kaldır</th>
                                <th>Düzenle</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.BrandName</td>
                                    <td>@item.Model</td>
                                    <td>@item.Luggage</td>
                                    <td>@item.Km</td>
                                    <td><a href="/AdminCar/RemoveCar/@item.CarID" class="btn btn-outline-danger">Kaldır</a></td>
                                    <td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-outline-danger">Düzenler</a></td>
                                    <td><a href="/AdminCar/CarDetail/@item.CarID" class="btn btn-outline-danger">Detaylar</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

