@model List<Web.Dto.ContactDtos.ResultContactDto>
@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var total = Model?.Count ?? 0;
    var i = 0;
}

<br />
<br />
<br />
<br />
<div class="page-content py-3">
    <div class="container-fluid">

        <div class="d-flex align-items-center justify-content-between mb-3">
            <h4 class="mb-0">Gelen Mesajlar</h4>
            <span class="badge bg-dark">Toplam: @total</span>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:56px">#</th>
                                <th>Ad Soyad</th>
                                <th>E-posta</th>
                                <th>Konu</th>
                                <th>Mesaj</th>
                                <th style="width:180px">Gönderim</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">Kayıt bulunamadı.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var x in Model)
                                {
                                    i++;
                                    <tr>
                                        <td class="text-muted">@i</td>
                                        <td>@x.Name</td>
                                        <td>
                                            @if (!string.IsNullOrWhiteSpace(x.Email))
                                            {
                                                <a href="mailto:@x.Email">@x.Email</a>
                                            }
                                        </td>
                                        <td class="text-truncate" style="max-width:240px">@x.Subject</td>
                                        <td><div class="small text-muted line-clamp-2">@x.Message</div></td>
                                        <td class="text-nowrap">@x.SendDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
